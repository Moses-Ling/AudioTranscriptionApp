﻿<Window x:Class="AudioTranscriptionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:AudioTranscriptionApp.ViewModels"
        xmlns:converters="clr-namespace:AudioTranscriptionApp.Converters"
        Title="Audio Transcription App" Height="650" Width="900"
        Closing="Window_Closing">
    
    <Window.Resources>
        <viewmodels:MainViewModel x:Key="MainViewModel"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:AudioLevelToWidthConverter x:Key="AudioLevelToWidthConverter"/>
        <converters:AudioLevelToPercentConverter x:Key="AudioLevelToPercentConverter"/>
    </Window.Resources>
    
    <Grid Margin="10" DataContext="{StaticResource MainViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="StartButton" Content="Start Recording" Width="120" Height="30" Margin="0,0,10,0" 
                    Command="{Binding StartRecordingCommand}"
                    IsEnabled="{Binding IsRecording, Converter={StaticResource InverseBooleanConverter}}"/>
            
            <Button x:Name="StopButton" Content="Stop Recording" Width="120" Height="30" 
                    Command="{Binding StopRecordingCommand}"
                    IsEnabled="{Binding IsRecording}"/>
            
            <Button x:Name="SaveButton" Content="Save Transcript" Width="120" Height="30" Margin="10,0,0,0" 
                    Command="{Binding SaveTranscriptCommand}"/>
            
            <Button x:Name="ClearButton" Content="Clear Transcript" Width="120" Height="30" Margin="10,0,0,0" 
                    Command="{Binding ClearTranscriptCommand}"/>

            <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="API Key:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <PasswordBox x:Name="ApiKeyBox" Width="200" PasswordChanged="ApiKeyBox_PasswordChanged"/>
            </StackPanel>
        </StackPanel>

        <!-- Audio Device Selection -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Audio Device:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="1" x:Name="AudioDevicesComboBox" 
                      ItemsSource="{Binding AudioDevices}"
                      SelectedItem="{Binding SelectedAudioDevice}"
                      DisplayMemberPath="DisplayName"/>

            <Button Grid.Column="2" x:Name="RefreshDevicesButton" 
                    Content="Refresh Devices" Width="120" Margin="10,0,0,0"
                    Command="{Binding RefreshDevicesCommand}"/>
        </Grid>

        <!-- Main Transcription Area -->
        <TextBox x:Name="TranscriptionTextBox" Grid.Row="2" 
                 Text="{Binding TranscriptionText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True" TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 FontSize="14" Margin="0,0,0,10"/>

        <!-- Audio Level Visualization -->
        <Grid Grid.Row="3" Margin="0,0,0,10" Height="40">
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3">
                <Grid x:Name="AudioLevelBarBackground">
                    <Rectangle Fill="#F0F0F0" />
                    <Rectangle x:Name="AudioLevelBar" Fill="#4CAF50" HorizontalAlignment="Left">
                        <Rectangle.Width>
                            <MultiBinding Converter="{StaticResource AudioLevelToWidthConverter}">
                                <Binding Path="AudioLevel"/>
                                <Binding ElementName="AudioLevelBarBackground" Path="ActualWidth"/>
                            </MultiBinding>
                        </Rectangle.Width>
                    </Rectangle>
                    <TextBlock x:Name="AudioLevelText" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                               FontWeight="SemiBold">
                        <TextBlock.Text>
                            <Binding Path="AudioLevel" StringFormat="Audio Level: {0:P0}"/>
                        </TextBlock.Text>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusTextBlock" Grid.Column="0" 
                       Text="{Binding StatusText}" 
                       VerticalAlignment="Center"/>
            
            <ProgressBar x:Name="TranscriptionProgress" Grid.Column="1" Width="150" Height="15" 
                         Visibility="{Binding IsTranscribing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</Window>
